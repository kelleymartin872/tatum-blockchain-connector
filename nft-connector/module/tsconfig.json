{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "skipLibCheck": true,
    "sourceMap": false,
    "outDir": "./npm",
    "rootDir": "./src",
    "baseUrl": "./",
    "noLib": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
